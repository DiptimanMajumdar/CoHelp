<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="#4F375A"
    android:layout_margin="5dp"
    app:cardCornerRadius="8dp"
    android:elevation="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="5dp">

       <TextView
           android:id="@+id/ngoName"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="NGO name"
           android:textAlignment="center"
           android:textSize="20sp"
           android:layout_margin="3dp"
           android:padding="7dp"
           android:textStyle="bold"
           android:fontFamily="@font/headland_one"
           android:textColor="#F48D74"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="3">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:layout_marginStart="5dp"
                    android:text="Address : "
                    android:fontFamily="@font/amarante"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ngoAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:text="Address of NGO to be put in this box where all the detailed address will go"
                    android:textAlignment="textStart"
                    android:textColor="#C9C0CD"
                    android:textSize="17sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:text="Contact number : "
                    android:fontFamily="@font/amarante"
                    android:layout_marginStart="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ngoPhoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:text="Phone no. of NGO"
                    android:textAlignment="center"
                    android:textColor="#C9C0CD"
                    android:textSize="17sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:text="Website : "
                    android:fontFamily="@font/amarante"
                    android:layout_marginStart="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ngoWebsite"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:text="Website of NGO"
                    android:textAlignment="center"
                    android:textColor="#C9C0CD"
                    android:textSize="17sp" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>